{% extends 'admin_layout.html.twig' %}

{% block title %}Wild Zoo Admin |Â Index Animal{% endblock %}

{% block body %}
    <main class="container">
        <div class="d-flex justify-content-between">
            <h1>Administrer un animal</h1>
            <a class="align-self-end btn btn-primary" href="{{ path('admin_animal_add') }}">Ajouter une animal</a>
        </div>

        <table class="mt-5 table table-hover ">
            <thead class="table-primary text-light">
                <tr>
                    <th>Name</th>
                    <th>Area</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            {% for animal in animals %}
            <tr>
                <td>{{ animal.name }}</td>
                <td>{{ animal.area.name ?? ''}}</td>
                <td class="text-right"><a class="btn btn-outline-primary" href="{{ path('admin_animal_edit', {'id':animal.id}) }}">Editer</a></td>
            </tr>
            {% else %}
                <tr><td colspan="2">Pas d'animaux pour le moment</td></tr>
            {% endfor %}
            </tbody>
        </table>
        <a class="mt-4 btn btn-primary" href="{{ path('admin_animal_add') }}">Ajouter une animal</a>

    </main>
{% endblock %}
