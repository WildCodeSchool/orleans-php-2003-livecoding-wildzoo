{% block body %}
    <h1 class="mb-4">Ajouter un animal</h1>

    {{ form_start(form) }}

    <div class="form-group">
        {{ form_label(form.name, 'Nom') }}
        {{ form_widget(form.name) }}
    </div>

    {{ form_row(form.description) }}

    {{ form_row(form.area) }}

